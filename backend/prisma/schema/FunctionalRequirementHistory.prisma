model FunctionalRequirementHistory {
  id            String                @id @default(uuid())
  requirementId String
  requirement   FunctionalRequirement @relation(fields: [requirementId], references: [id], onDelete: Cascade)

  version   Int
  diff      String
  changedById String?
  changedBy   User?   @relation(fields: [changedById], references: [id])
  createdAt DateTime @default(now())
}
