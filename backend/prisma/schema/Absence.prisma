model AbsenceType {
  id               String    @id @default(uuid())
  name             String    @unique
  color            String
  isPaid           Boolean   @default(true)
  requiresApproval Boolean   @default(false)
  isVacation       Boolean   @default(false)
  absences         Absence[]
}

model Absence {
  id             String   @id @default(uuid())
  collaboratorId String
  typeId         String
  startDate      DateTime
  endDate        DateTime
  status         String   @default("PENDING") // TODO [refactor] usar un enum actualmente: PENDING, APPROVED, REJECTED
  reason         String?
  daysConsumed   Float    @default(0)

  collaborator Collaborator @relation(fields: [collaboratorId], references: [id], onDelete: Cascade)
  type         AbsenceType  @relation(fields: [typeId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
