model User {
  id       String @id @default(uuid())
  email    String @unique
  password String

  collaborators Collaborator[]

  isSuperAdmin Boolean @default(false)

  cardComments                   CardComment[]
  cardEvents                     CardEvent[]
  cardCommentReactions           CardCommentReaction[]
  cardCommentHistory             CardCommentHistory[]
  documentedRequirements         FunctionalRequirement[]
  functionalRequirementHistories FunctionalRequirementHistory[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
